#q5
kodak = '"big ole ruby diamond on my pinky finger and it look like a ring rop" - kodak black'
print(kodak)
print('no. of characters:', len(kodak))

list = kodak.split()
word = input('\nwhat word do you want to remove ')
if word in list:
    list.remove(word)
newstring = ''
for x in list:
    newstring += (x)
    newstring += (' ')
print('\n')
print (newstring)
print('no. of characters:', len(newstring))
print(f'\nword removed is {word}')
print('no. of characters:', len(word))
